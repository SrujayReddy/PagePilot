{
  "manifest_version": 3,
  "name": "Gemini Page Title Generator",
  "version": "1.0",
  "description": "Uses Gemini to suggest a better title for the page.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_icon": "icons/icon.png"
  }
}