{
  "manifest_version": 3,
  "name": "Gemini Header Highlighter",
  "version": "1.0",
  "description": "Highlights text that Gemini believes are section headers.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
